<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tz.co.hapa.lecturerassistant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TakeAttendance" />
        <activity android:name=".ManageStudents" />
        <activity android:name=".RegisterStudent" />
        <activity android:name=".DisplayStudentAttendance" />
        <activity android:name=".Subjects" />
        <activity android:name=".ManageSubjects" />
        <activity android:name=".CreateSubject" />
        <activity android:name=".ViewSubjects" />
        <activity android:name=".EditSubject" />
        <activity android:name=".Main"/>
    </application>

</manifest>